
<form name="userForm" method="post" ng-submit="submit($event)" class="form-horizontal" role="form" novalidate>
    @Html.AntiForgeryToken()
    <div class="form-group">
            <label class="col-md-2 control-label">Email</label>
            <div class="col-md-10">{{data.user.Email}}</div>
        </div>
    <div class="form-group">
            <label class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input name="fullname" type="text" ng-model="data.user.UName" class="form-control" autofocus required/>
            </div>
        </div>
    <div class="form-group">
            <label class="col-md-2 control-label">Phone</label>
            <div class="col-md-10">
                <input name="phone" type="text" ng-model="data.user.PhoneNumber" class="form-control" />
            </div>
        </div>
    <div class="form-group">
            <div class="checkbox">
                <label>
                    <input name="lockout" type="checkbox" ng-checked="data.user.Lockout"/>Lockout
                </label>
            </div>
        </div>
    <div class="form-group">
            <label class="col-md-2 control-label">Roles</label>
            <div class="row">
                <ul class="list-unstyled">
                    <li class="col-sm-3" ng-repeat="role in roles">
                        <label>
                            <input type="checkbox" name="roles" ng-checked="role.selected" ng-click="rolecheck(role)"/>{{role.Name}}
                        </label>
                    </li>
                </ul>
            </div>
        </div>
    <div class="form-group">
            <label class="col-md-2 control-label">Dealers</label>
        <input name="dealer" type="text" ng-model="data.dealer" ng-options="dealer.DealerID as dealer.Name for dealer in getDealers($viewValue)" bs-typeahead data-min-length="{{minLength}}" validation-checker="dealerCheck" validation-check class="form-control" autocomplete="off" />
            <div class="row">
                <ul class="list-unstyled">
                    <li class="col-sm-3" ng-repeat="dealer in data.dealers">
                        <span>{{dealer.Name}}</span>(<span>{{dealer.DealerID}}</span>)
                        <a href="#" ng-click="delDealer(dealer)">Del</a>
                    </li>
                </ul>
            </div>
        </div>

    <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Submit" ng-disabled="userForm.$invalid || pristine()" />
                <input type="reset" class="btn btn-default" value="Reset" ng-click="reset()" ng-disabled="pristine()" />
            </div>
        </div>
</form>
@Scripts.Render("~/bundles/desking.usersAdmin")
