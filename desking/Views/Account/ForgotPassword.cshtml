<form method="post" ng-controller="pwdCtrl" ng-submit="submit()" class="form-horizontal" role="form">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-10">
            <input type="email" ng-model="email" class="form-control" autofocus required/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Email Link" />
        </div>
    </div>
</form>
@Scripts.Render("~/bundles/desking.forgetPwd")
